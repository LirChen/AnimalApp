<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_0552cd4026bd181b4c27979ce4685e8"
    android:orientation="vertical"
    android:paddingStart="60dp"
    android:paddingTop="200dp"
    android:paddingEnd="60dp"
    tools:context=".Fragments.FragmentAddAnimal">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/Add_animal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorTertiaryFixedDim"
        android:ems="10"
        android:fontFamily="@font/calligraffitti"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:text="Add Animal"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/AnimalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Animal_name"
        android:onClick="getName"
        android:paddingTop="18dp" />

    <EditText
        android:id="@+id/AnimalType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Animal_type"
        android:onClick="getAnimalType"
        android:paddingTop="19dp" />

    <EditText
        android:id="@+id/AnimalDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Animal_description"
        android:onClick="getAnimalDescription"
        android:paddingTop="18dp" />

    <EditText
        android:id="@+id/AnimalImageURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Animal_image_url"
        android:onClick="getAnimalImageUrl"
        android:paddingTop="15dp" />

    <Button
        android:id="@+id/Add_animal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorTertiary"
        android:fontFamily="@font/calligraffitti"
        android:paddingTop="10dp"
        android:text="Add animal"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back_to_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorTertiary"
        android:fontFamily="@font/calligraffitti"
        android:paddingTop="10dp"
        android:text="Back to main"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>