<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_0552cd4026bd181b4c27979ce4685e8"
    android:orientation="vertical"
    android:paddingStart="60dp"
    android:paddingTop="230dp"
    android:paddingEnd="60dp"
    tools:context=".Fragments.FragmentLogin">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/Login_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorTertiaryFixedDim"
        android:ems="10"
        android:fontFamily="@font/calligraffitti"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:text="Login page"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingTop="18dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingTop="16dp" />

    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="?attr/colorTertiary"
        android:fontFamily="@font/calligraffitti"
        android:paddingLeft="24dp"
        android:text="Login"
        android:textColor="@color/material_dynamic_neutral100"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="?attr/colorTertiary"
        android:fontFamily="@font/calligraffitti"
        android:paddingLeft="24dp"
        android:text="Register"
        android:textColor="@color/material_dynamic_neutral100"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>